# DocuMind Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Hugging Face Configuration
# ============================================
# Your Hugging Face API key (get it from https://huggingface.co/settings/tokens)
HF_API_KEY=''
CEREBRAS_API_KEY=''

# Use Hugging Face Inference API (True) or local models (False)
USE_HF_INFERENCE_API=True

# ============================================
# Model Configuration
# ============================================
MODEL_NAME=mistralai/Mistral-7B-Instruct-v0.2
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
DEVICE=cpu  # or cuda for GPU (only used when USE_HF_INFERENCE_API=False)
MAX_LENGTH=512
TEMPERATURE=0.7

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Storage Paths
FAISS_INDEX_PATH=./data/faiss_index
DOCUMENT_STORE_PATH=./data/document_store
DOCUMENTS_PATH=./data/documents
TEMPLATES_PATH=./data/templates
OUTPUTS_PATH=./data/outputs

# Logging
LOG_LEVEL=INFO
